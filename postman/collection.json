							"raw": "<?xml version=\"1.0\"?>\r\n<im:instanceRegistrationCreation xmlns:im=\"http://www.bosch.com/IAP/im1_1_0\">\r\n   <im:instance>\r\n      <im:name>My IoT Application</im:name>\r\n      <im:tenantId>{{permissions.tenantId}}</im:tenantId>\r\n      <im:domainId>{{permissions.domainId}}</im:domainId>\r\n   </im:instance>\r\n   <im:permission>\r\n      <im:name>Create_Device</im:name>\r\n      <im:translation>\r\n         <im:text>Create Device EN</im:text>\r\n         <im:attribute>NAME</im:attribute>\r\n         <im:locale>EN</im:locale>\r\n      </im:translation>\r\n      <im:translation>\r\n         <im:text>Create Device Description EN</im:text>\r\n         <im:attribute>DESCRIPTION</im:attribute>\r\n         <im:locale>EN</im:locale>\r\n      </im:translation>\r\n   </im:permission>\r\n   <im:permission>\r\n      <im:name>Read_Device</im:name>\r\n      <im:translation>\r\n         <im:text>Read Device EN</im:text>\r\n         <im:attribute>NAME</im:attribute>\r\n         <im:locale>EN</im:locale>\r\n      </im:translation>\r\n      <im:translation>\r\n         <im:text>Lese Ger√§t DE</im:text>\r\n         <im:attribute>NAME</im:attribute>\r\n         <im:locale>DE</im:locale>\r\n      </im:translation>\r\n   </im:permission>\r\n   <im:role>\r\n      <im:name>IoT_Admin</im:name>\r\n      <im:imPermissionName>READ_USER</im:imPermissionName>\r\n      <im:imPermissionName>READ_GROUP</im:imPermissionName>\r\n      <im:ownPermissionName>Create_Device</im:ownPermissionName>\r\n      <im:ownPermissionName>Read_Device</im:ownPermissionName>\r\n      <im:translation>\r\n         <im:text>IoT Application Administator</im:text>\r\n         <im:attribute>NAME</im:attribute>\r\n         <im:locale>EN</im:locale>\r\n      </im:translation>\r\n   </im:role>\r\n</im:instanceRegistrationCreation>"
						},
